<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="example.browser"
             x:Name="browser">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal">
                <Button Text="Go" Clicked="Button_Click" />
                <Entry x:Name="urlEntry" HorizontalOptions="FillAndExpand" />
            </StackLayout>
            <WebView x:Name="webView" BackgroundColor="Blue" IsVisible="True" IsEnabled="True" Source="http://google.com" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>